@model POE.Models.AdminUsers

@{
    ViewData["Title"] = "Authorised Users Registration";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Authorised Users</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #AAA817;
            color: #333;
        }

        .container {
            max-width: 450px;
            margin: 0 auto;
            padding: 50px 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 2rem;
            color: #34495e;
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #34495e;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #3498db;
            }

        .btn-submit {
            width: 100%;
            padding: 12px;
            background-color: #AAA817;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .btn-submit:hover {
                background-color: #FFC638;
            }

        .validation-message {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .form-footer {
            text-align: center;
            margin-top: 20px;
        }

            .form-footer a {
                font-size: 0.9rem;
                color: #3498db;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .form-footer a:hover {
                    color: #2980b9;
                }
    </style>
</head>

<body>
    <div class="container">
        <h1>Sign Up</h1>

        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserNames">User Name</label>
                <input asp-for="UserNames" class="form-control" />
                <span asp-validation-for="UserNames" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserPassword">Password</label>
                <input asp-for="UserPassword" type="password" class="form-control" />
                <span asp-validation-for="UserPassword" class="validation-message"></span>
            </div>

           

            <button type="submit" class="btn-submit">Register</button>
        </form>

        <div class="form-footer">
            <p>Already have an account? <a asp-action="Login">Login here</a>.</p>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>
