@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor Accessor;

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Gift of the Givers Foundation</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .text-center {
            text-align: center;
            margin-bottom: 50px;
        }

        h1 {
            font-size: 2.8rem;
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 30px;
        }

        .card-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
        }

        .card {
            flex: 1;
            max-width: 300px;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            padding: 25px;
            text-align: center;
        }

            .card:hover {
                transform: translateY(-10px);
                box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
            }

            .card p {
                font-size: 1.1rem;
                color: #7f8c8d;
                margin-bottom: 15px;
            }

        .btn-custom {
            background-color: #27ae60;
            color: #fff;
            padding: 12px 20px;
            border-radius: 30px;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 600;
            transition: background-color 0.3s ease-in-out;
        }

        .back-button {
            display: block;
            margin: 20px auto;
            padding: 10px 15px;
            background-color: #2c3e50;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            width: 100px;
            transition: background-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #219150;
            }

        .login-buttons {
            text-align: center;
            margin-top: 50px;
        }

            .login-buttons a {
                width: 200px;
                padding: 12px;
                background-color: #e74c3c;
                color: #fff;
                border-radius: 30px;
                text-decoration: none;
                font-size: 1rem;
                font-weight: 600;
                margin: 10px;
                display: inline-block;
                transition: background-color 0.3s ease-in-out;
            }

                .login-buttons a:hover {
                    background-color: #c0392b;
                }

        media (max-width: 768px) {
            .card-container

        {
            flex-direction: column;
            align-items: center;
        }

        .card {
            max-width: 90%;
        }

        }
    </style>
</head>

<body>

    <div class="container">
        <div class="text-center">
           
                <div class="card-container">
                    <div class="card">
                        <p>Update Lecture Details</p>
                    <a asp-action="ManageLecturers" class="btn-custom"> add </a>
                    </div>
                    <div class="card">
                        <p>Approved claims that are rejected</p>
                    <a asp-action="AppeoveRejectedClaims" class="btn-custom">View </a>
                    </div>
                    <div class="card">
                        <p>Rejected claims that are approved</p>
                    <a asp-action="RejectApprovedClaims" class="btn-custom">View </a>
                    </div>
      
                <div class="card">
                    <p> Generate Invoice</p>
                    <a href="/Home/GenerateInvoice" class="btn btn-primary mt-2">
                        Generate Invoice
                    </a>
                </div>

                </div>

            <a href="@Url.Action("index", "Home")" class="back-button">Back</a>



        </div>
    </div>

</body>

</html>
